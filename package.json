{
  "private": true,
  "scripts": {
    "start": "cd app && yarn start",
    "flowmap.blue": "cd packages/flowmap.blue && yarn dev",
    "version-bump": "lerna version --no-push --force-publish",
    "publish-prerelease": "lerna publish --dist-tag next from-package",
    "lint": "tslint --fix '{app,packages/*}/{src}/**/*.{ts,tsx}'",
    "typecheck": "lerna run --stream typecheck"
  },
  "workspaces": [
    "packages/*",
    "app"
  ]
}
